{%- liquid 
	assign alt = alt | default: img.alt
	assign width = width | default: 1426
	assign widths = widths | default: '550,750,950,1100,1280,1426'
	assign sizes = sizes | default: '(max-width:777px) 100vw, (min-width:778px) 100vw, 100vw'
	assign loading = loading | default: 'eager'
	if section.index > 3
		assign loading = 'lazy'
	endif

	echo img | image_url: width: width | image_tag: widths: widths, sizes: sizes, loading: loading, alt: alt
-%}